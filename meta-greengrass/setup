if [ ! -e $1/conf/local.conf.sample ]; then
    EULA=$EULA DISTRO=$DISTRO MACHINE=$MACHINE . ./setup-iot-gateway $@
    echo "GG_TARBALL_LOCAL_PATH = \"\${BSPDIR}/sources\"" >> conf/local.conf
    echo "BBLAYERS += \"\${BSPDIR}/sources/meta-imx-iot-gateway/meta-greengrass\"" >> conf/bblayers.conf
else
    . ./sources/base/setup-environment $@
    echo ""
    echo "You can now create an IoT Gateway image:"
    echo "    $ bitbake imx-image-iot-gateway"
    echo ""
fi
